<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/switch_user_draw">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/userLTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/theme_color">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请选择一个账户"
                android:textSize="@dimen/large_text_size"
                android:textColor="@color/index_title_txt_color"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userLDtails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:background="@color/theme_color">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我们检查出您注册了多个账户"
                android:textSize="@dimen/notice_text_size"
                android:textColor="@color/darkgray"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/line_gray_shape" />
        <LinearLayout
            android:id="@+id/userL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/userLIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/theme_color">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@drawable/switch_gray"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottomDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/theme_color">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="在左侧菜单点击图标可切换账户"
                android:textSize="@dimen/notice_text_size"
                android:textColor="@color/darkgray"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>